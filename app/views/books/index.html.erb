<!DOCTYPE html>
<html lang="ja">
  <header>
  </header>

  <body>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%  @books.each do |book| %>

<tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td><%= link_to "Show", book_path(book.id) %></td>
  <td><%= link_to "Edit", edit_book_path(book.id) %></td>
  <td><%= link_to "Destroy", book_path(book.id), method: :delete,"data-confirm"=>"Are you sure?" %></td>
</tr>
<% end %>
  </tbody>
</table>

<h2>New Book</h2>
<!-- form_with部分 -->

<%= form_with model: @book, local:true do |f| %>
 <% if @book.errors.any? && @book.errors.count >=2 %>
    <h3 class="error"><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li class="error"><%= message %></li>
        <% end %>
    </ul>
 <% elsif @book.errors.count == 1 %>
    <h3 class="error"><%= @book.errors.count %>error prohibited this book from being saved:</h3>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li class="error"><%= message %></li>
      <% end %>
    </ul>
 <% end %>
<div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>
<div class="field">
  <label>Body</label>
  <%= f.text_area :body %>
</div>
<div class="action">
  <%= f.submit 'Create Book' %>
</div>
<% end %>
  </body>

</html>
